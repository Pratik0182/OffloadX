<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#26A69A"
            android:text="Upload Task"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#EEEEEE">

            <Button
                android:id="@+id/btnComposite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Composite"
                android:backgroundTint="#26A69A" />

            <Button
                android:id="@+id/btnComplex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Complex"
                android:backgroundTint="#BDBDBD"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Task Id" android:textColor="#26A69A"/>
            <EditText
                android:id="@+id/etTaskId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Task ID"
                android:inputType="number"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Task Type" android:layout_marginTop="16dp" android:textColor="#26A69A"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <CheckBox android:id="@+id/cbLocal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Local"/>
                <CheckBox android:id="@+id/cbCloud" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cloud" android:layout_marginStart="20dp"/>
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Process Id" android:layout_marginTop="16dp" android:textColor="#26A69A"/>
            <TextView
                android:id="@+id/tvProcessId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Generated-ID"
                android:background="#F5F5F5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#F9F9F9"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tvSelectedFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:layout_centerVertical="true"/>
                <ImageButton
                    android:id="@+id/btnBrowse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_add"
                    android:backgroundTint="#26A69A" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnFinalUpload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:text="UPLOAD"
            android:backgroundTint="#26A69A"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>